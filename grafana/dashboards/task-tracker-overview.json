{
  "title": "Task Tracker Overview",
  "tags": ["tasktracker", "overview"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 2,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
      "type": "stat",
      "title": "HTTP Request Rate (5m)",
      "targets": [
        {"expr": "sum(rate(http_requests_total[5m]))", "refId": "A"}
      ],
      "options": {
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
        "textMode": "value",
        "colorMode": "value"
      },
      "fieldConfig": {"defaults": {"unit": "ops"}}
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
      "type": "stat",
      "title": "HTTP Error Rate (5m)",
      "targets": [
        {"expr": "sum(rate(http_errors_total[5m]))", "refId": "A"}
      ],
      "options": {
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
        "textMode": "value",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 0.1, "color": "yellow"},
              {"value": 0.5, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
      "type": "stat",
      "title": "Median HTTP Latency (5m)",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
        "textMode": "value",
        "colorMode": "value"
      },
      "fieldConfig": {"defaults": {"unit": "s"}}
    },
    {
      "id": 4,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "type": "graph",
      "title": "HTTP Requests by Status", 
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total[5m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "yaxes": [{"format": "ops", "label": "Requests/sec"}, {"format": "short"}],
      "legend": {"show": true, "alignAsTable": true, "values": true, "current": true}
    },
    {
      "id": 5,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "type": "graph",
      "title": "HTTP Latency (p95/p50)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "B"
        }
      ],
      "yaxes": [{"format": "s", "label": "Seconds"}, {"format": "short"}],
      "legend": {"show": true, "alignAsTable": true, "values": true, "current": true}
    },
    {
      "id": 6,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "type": "graph",
      "title": "Task Operations Rate",
      "targets": [
        {
          "expr": "rate(task_operations_total[5m])",
          "legendFormat": "{{operation}} ({{status}})",
          "refId": "A"
        }
      ],
      "yaxes": [{"format": "ops", "label": "Operations/sec"}, {"format": "short"}],
      "legend": {"show": true, "alignAsTable": true, "values": true, "current": true}
    },
    {
      "id": 7,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "type": "graph",
      "title": "Task Operation Duration (p95/p50)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(task_operation_duration_seconds_bucket[5m]))",
          "legendFormat": "{{operation}} p95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(task_operation_duration_seconds_bucket[5m]))",
          "legendFormat": "{{operation}} p50",
          "refId": "B"
        }
      ],
      "yaxes": [{"format": "s", "label": "Seconds"}, {"format": "short"}],
      "legend": {"show": true, "alignAsTable": true, "values": true, "current": true}
    },
    {
      "id": 8,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "type": "graph",
      "title": "Auth Requests", 
      "targets": [
        {"expr": "rate(auth_requests_total[5m])", "legendFormat": "{{endpoint}} ({{status}})", "refId": "A"}
      ],
      "yaxes": [{"format": "ops", "label": "Requests/sec"}, {"format": "short"}],
      "legend": {"show": true, "alignAsTable": true, "values": true, "current": true},
      "stack": true
    },
    {
      "id": 9,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "type": "graph",
      "title": "Reminder Processing",
      "targets": [
        {"expr": "rate(reminders_processed_total[5m])", "legendFormat": "{{type}} ({{status}})", "refId": "A"}
      ],
      "yaxes": [{"format": "ops", "label": "Reminders/sec"}, {"format": "short"}],
      "legend": {"show": true, "alignAsTable": true, "values": true, "current": true}
    },
    {
      "id": 10,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
      "type": "graph",
      "title": "Attachment Upload Duration (p95/p50)",
      "targets": [
        {"expr": "histogram_quantile(0.95, rate(attachment_upload_duration_seconds_bucket[5m]))", "legendFormat": "p95", "refId": "A"},
        {"expr": "histogram_quantile(0.50, rate(attachment_upload_duration_seconds_bucket[5m]))", "legendFormat": "p50", "refId": "B"}
      ],
      "yaxes": [{"format": "s", "label": "Seconds"}, {"format": "short"}],
      "legend": {"show": true, "alignAsTable": true, "values": true, "current": true}
    },
    {
      "id": 11,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
      "type": "graph",
      "title": "HTTP Paths (Top 5 by Rate)",
      "targets": [
        {
          "expr": "topk(5, sum(rate(http_requests_total[5m])) by (path))",
          "legendFormat": "{{path}}",
          "refId": "A"
        }
      ],
      "yaxes": [{"format": "ops", "label": "Requests/sec"}, {"format": "short"}],
      "legend": {"show": true, "alignAsTable": true, "values": true, "current": true}
    }
  ],
  "time": {"from": "now-15m", "to": "now"},
  "timepicker": {"refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]}
}
